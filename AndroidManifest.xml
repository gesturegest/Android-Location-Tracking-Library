<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.nagendra.nagendralocationlibrary"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="9"
        android:targetSdkVersion="15" />

    <permission
        android:name="com.nagendra.nagendralocationlibrary.permission.C2D_MESSAGE"
        android:protectionLevel="signature" >
    </permission>

    <!-- Permission to access Internet -->
    <uses-permission
        android:name="android.permission.INTERNET" />
    <!-- Permission to access GPS data -->
    <uses-permission
        android:name="android.permission.ACCESS_FINE_LOCATION" />
    <!-- Permission to access data from network provider -->
    <uses-permission
        android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <!-- Permission for receiveing GCM message  -->
    <uses-permission
        android:name="com.google.android.c2dm.permission.RECEIVE" />
    <uses-permission
        android:name="com.nagendra.nagendralocationlibrary.permission.C2D_MESSAGE" />
    <!-- Permission to wake up the system once GCM is received -->
    <uses-permission
        android:name="android.permission.WAKE_LOCK" />
    <!-- Permission for writing data on external storage(On SD card) -->
    <uses-permission
        android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <!-- Permission to get the Gmail account(This is required only if you are developing application for lower than android version 4.0) -->
    <uses-permission
        android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission 
        android:name="android.permission.READ_PHONE_STATE"/>

    <application
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.nagendra.nagendralibrary.LibraryMainActivity"
            android:label="@string/title_activity_library_main" >
            <intent-filter>
                <action
                    android:name="android.intent.action.MAIN" />

                <category
                    android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <receiver
            android:name="com.nagendra.nagendralibrary.receivers.NagendraLibraryGCMBoradcastReceiver"
            android:permission="com.google.android.c2dm.permission.SEND" >
            <intent-filter>
                <action
                    android:name="com.google.android.c2dm.intent.RECEIVE" />
                <action
                    android:name="com.google.android.c2dm.intent.REGISTRATION" />
                <category
                    android:name="com.nagendra.nagendralocationlibrary" />
            </intent-filter>
        </receiver>
        <service
            android:name="com.nagendra.nagendralocationlibrary.services.GCMIntentService" >
        </service>
        <service
            android:name="com.nagendra.nagendralibrary.services.GCMregIdInformService" >
        </service>
    </application>

</manifest>